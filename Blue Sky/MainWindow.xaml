<Window
    x:Class="Blue_Sky.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Blue_Sky"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="BlueSkyWindow"
    Title="Blue Sky Tool"
    Width="1024"
    Height="728"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <!--  Light BG : Background="#FFE5E5E5"  -->

    <Grid Margin="4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="103*" />
            <ColumnDefinition Width="905*" />
        </Grid.ColumnDefinitions>
        <TabControl
            Grid.ColumnSpan="2"
            Margin="4"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">
            <TabItem Padding="8,4" Header="Map Information">
                <Grid
                    Margin="4"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="34" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <DockPanel
                        Grid.Row="0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Top">
                        <Button
                            Margin="4"
                            Padding="8,4"
                            Click="btnMap_Click"
                            Content="Open map..." />
                        <TextBox
                            x:Name="txtMapDir"
                            Margin="4"
                            Padding="4"
                            IsReadOnly="True"
                            TextWrapping="NoWrap" />
                    </DockPanel>
                    <Grid
                        Grid.Row="1"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0" Margin="4">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="410" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0">
                                <Label
                                    Margin="4,4,4,0"
                                    Padding="0,4"
                                    Content="Map Name" />
                                <TextBox
                                    x:Name="txtMapName"
                                    Margin="4,0,4,4"
                                    Padding="4"
                                    IsReadOnly="True"
                                    TextWrapping="NoWrap" />
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <Label
                                            Margin="4,4,4,0"
                                            Padding="0,4"
                                            Content="Total Tiles" />
                                        <TextBox
                                            x:Name="txtMapTileCount"
                                            Margin="4,0,4,4"
                                            Padding="4"
                                            IsReadOnly="True"
                                            TextWrapping="NoWrap" />
                                    </StackPanel>
                                    <StackPanel Grid.Column="1">
                                        <Label
                                            Margin="4,4,4,0"
                                            Padding="0,4"
                                            Content="Tiles Missing" />
                                        <TextBox
                                            x:Name="txtMapTileMissing"
                                            Margin="4,0,4,4"
                                            Padding="4"
                                            IsReadOnly="True"
                                            TextWrapping="NoWrap" />
                                    </StackPanel>
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <Label
                                            Margin="4,4,4,0"
                                            Padding="0,4"
                                            Content="Total Objects" />
                                        <TextBox
                                            x:Name="txtMapObjectCount"
                                            Margin="4,0,4,4"
                                            Padding="4"
                                            IsReadOnly="True"
                                            TextWrapping="NoWrap" />
                                    </StackPanel>
                                    <StackPanel Grid.Column="1">
                                        <Label
                                            Margin="4,4,4,0"
                                            Padding="0,4"
                                            Content="Missing Objects" />
                                        <TextBox
                                            x:Name="txtMapObjectMissing"
                                            Margin="4,0,4,4"
                                            Padding="4"
                                            IsReadOnly="True"
                                            TextWrapping="NoWrap" />
                                    </StackPanel>
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <Label
                                            Margin="4,4,4,0"
                                            Padding="0,4"
                                            Content="Total Splines" />
                                        <TextBox
                                            x:Name="txtMapSplineCount"
                                            Margin="4,0,4,4"
                                            Padding="4"
                                            IsReadOnly="True"
                                            TextWrapping="NoWrap" />
                                    </StackPanel>
                                    <StackPanel Grid.Column="1">
                                        <Label
                                            Margin="4,4,4,0"
                                            Padding="0,4"
                                            Content="Missing Splines" />
                                        <TextBox
                                            x:Name="txtMapSplineMissing"
                                            Margin="4,0,4,4"
                                            Padding="4"
                                            IsReadOnly="True"
                                            TextWrapping="NoWrap" />
                                    </StackPanel>
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <Label
                                            Margin="4,4,4,0"
                                            Padding="0,4"
                                            Content="Total AI Vehicles" />
                                        <TextBox
                                            x:Name="txtMapAicarCount"
                                            Margin="4,0,4,4"
                                            Padding="4"
                                            IsReadOnly="True"
                                            TextWrapping="NoWrap" />
                                    </StackPanel>
                                    <StackPanel Grid.Column="1">
                                        <Label
                                            Margin="4,4,4,0"
                                            Padding="0,4"
                                            Content="Missing AI Vehicles" />
                                        <TextBox
                                            x:Name="txtMapAicarMissing"
                                            Margin="4,0,4,4"
                                            Padding="4"
                                            IsReadOnly="True"
                                            TextWrapping="NoWrap" />
                                    </StackPanel>
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <Label
                                            Margin="4,4,4,0"
                                            Padding="0,4"
                                            Content="Total Humans" />
                                        <TextBox
                                            x:Name="txtMapHumanCount"
                                            Margin="4,0,4,4"
                                            Padding="4"
                                            IsReadOnly="True"
                                            TextWrapping="NoWrap" />
                                    </StackPanel>
                                    <StackPanel Grid.Column="1">
                                        <Label
                                            Margin="4,4,4,0"
                                            Padding="0,4"
                                            Content="Missing Humans" />
                                        <TextBox
                                            x:Name="txtMapHumanMissing"
                                            Margin="4,0,4,4"
                                            Padding="4"
                                            IsReadOnly="True"
                                            TextWrapping="NoWrap" />
                                    </StackPanel>
                                </Grid>


                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <Label
                                            Margin="4,4,4,0"
                                            Padding="0,4"
                                            Content="Total Ground Textures" />
                                        <TextBox
                                            x:Name="txtGndTexCount"
                                            Margin="4,0,4,4"
                                            Padding="4"
                                            IsReadOnly="True"
                                            TextWrapping="NoWrap" />
                                    </StackPanel>
                                    <StackPanel Grid.Column="1">
                                        <Label
                                            Margin="4,4,4,0"
                                            Padding="0,4"
                                            Content="Missing Ground Textures" />
                                        <TextBox
                                            x:Name="txtGndTextMissing"
                                            Margin="4,0,4,4"
                                            Padding="4"
                                            IsReadOnly="True"
                                            TextWrapping="NoWrap" />
                                    </StackPanel>
                                </Grid>



                            </StackPanel>
                            <Grid
                                Grid.Row="1"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Label
                                    Grid.Row="0"
                                    Margin="4,4,4,0"
                                    Padding="0,4"
                                    Content="Map Description" />
                                <TextBox
                                    x:Name="txtMapDescription"
                                    Grid.Row="1"
                                    Margin="4,0,4,4"
                                    Padding="4"
                                    IsReadOnly="True"
                                    TextWrapping="Wrap" />
                            </Grid>
                        </Grid>
                        <Image
                            x:Name="imgMap"
                            Grid.Column="1"
                            Margin="4"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch" />
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem
                x:Name="tabTiles"
                Padding="8,4"
                Header="Tiles">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0" Margin="4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Label
                            Grid.Row="0"
                            Margin="4,0"
                            VerticalAlignment="Bottom"
                            Content="All tiles:" />
                        <TextBox
                            x:Name="txtTilesList"
                            Grid.Row="1"
                            Margin="4,0,4,4"
                            Padding="4"
                            FontFamily="Courier New"
                            IsReadOnly="True"
                            TextWrapping="Wrap"
                            VerticalScrollBarVisibility="Auto" />
                    </Grid>
                    <Grid Grid.Column="1" Margin="4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Label
                            Grid.Row="0"
                            Margin="4,0"
                            VerticalAlignment="Bottom"
                            Content="Missing tiles:" />
                        <TextBox
                            x:Name="txtTilesMissingList"
                            Grid.Row="1"
                            Margin="4,0,4,4"
                            Padding="4"
                            FontFamily="Courier New"
                            IsReadOnly="True"
                            TextWrapping="Wrap"
                            VerticalScrollBarVisibility="Auto" />
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem
                x:Name="tabObjects"
                Padding="8,4"
                Header="Objects">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0" Margin="4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Label
                            Grid.Row="0"
                            Margin="4,0"
                            VerticalAlignment="Bottom"
                            Content="All objects:" />
                        <TextBox
                            x:Name="txtObjectsList"
                            Grid.Row="1"
                            Margin="4,0,4,4"
                            Padding="4"
                            FontFamily="Courier New"
                            IsReadOnly="True"
                            TextWrapping="Wrap"
                            VerticalScrollBarVisibility="Auto" />
                    </Grid>
                    <Grid Grid.Column="1" Margin="4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Label
                            Grid.Row="0"
                            Margin="4,0"
                            VerticalAlignment="Bottom"
                            Content="Missing objects:" />
                        <TextBox
                            x:Name="txtObjectsMissingList"
                            Grid.Row="1"
                            Margin="4,0,4,4"
                            Padding="4"
                            FontFamily="Courier New"
                            IsReadOnly="True"
                            TextWrapping="Wrap"
                            VerticalScrollBarVisibility="Auto" />
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem
                x:Name="tabSplines"
                Padding="8,4"
                Header="Splines">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0" Margin="4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Label
                            Grid.Row="0"
                            Margin="4,0"
                            VerticalAlignment="Bottom"
                            Content="All splines:" />
                        <TextBox
                            x:Name="txtSplinesList"
                            Grid.Row="1"
                            Margin="4,0,4,4"
                            Padding="4"
                            FontFamily="Courier New"
                            IsReadOnly="True"
                            TextWrapping="Wrap"
                            VerticalScrollBarVisibility="Auto" />
                    </Grid>
                    <Grid Grid.Column="1" Margin="4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Label
                            Grid.Row="0"
                            Margin="4,0"
                            VerticalAlignment="Bottom"
                            Content="Missing splines:" />
                        <TextBox
                            x:Name="txtSplinesMissingList"
                            Grid.Row="1"
                            Margin="4,0,4,4"
                            Padding="4"
                            FontFamily="Courier New"
                            IsReadOnly="True"
                            TextWrapping="Wrap"
                            VerticalScrollBarVisibility="Auto" />
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem
                x:Name="tabAicar"
                Padding="8,4"
                Header="AI Vehicles">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0" Margin="4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Label
                            Grid.Row="0"
                            Margin="4,0"
                            VerticalAlignment="Bottom"
                            Content="All AI vehicles:" />
                        <TextBox
                            x:Name="txtAicarsList"
                            Grid.Row="1"
                            Margin="4,0,4,4"
                            Padding="4"
                            FontFamily="Courier New"
                            IsReadOnly="True"
                            TextWrapping="Wrap"
                            VerticalScrollBarVisibility="Auto" />
                    </Grid>
                    <Grid Grid.Column="1" Margin="4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Label
                            Grid.Row="0"
                            Margin="4,0"
                            VerticalAlignment="Bottom"
                            Content="Missing AI vehicles:" />
                        <TextBox
                            x:Name="txtAicarsMissingList"
                            Grid.Row="1"
                            Margin="4,0,4,4"
                            Padding="4"
                            FontFamily="Courier New"
                            IsReadOnly="True"
                            TextWrapping="Wrap"
                            VerticalScrollBarVisibility="Auto" />
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem
                x:Name="tabHuman"
                Padding="8,4"
                Header="Humans">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0" Margin="4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Label
                            Grid.Row="0"
                            Margin="4,0"
                            VerticalAlignment="Bottom"
                            Content="All humans:" />
                        <TextBox
                            x:Name="txtHumansList"
                            Grid.Row="1"
                            Margin="4,0,4,4"
                            Padding="4"
                            FontFamily="Courier New"
                            IsReadOnly="True"
                            TextWrapping="Wrap"
                            VerticalScrollBarVisibility="Auto" />
                    </Grid>
                    <Grid Grid.Column="1" Margin="4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Label
                            Grid.Row="0"
                            Margin="4,0"
                            VerticalAlignment="Bottom"
                            Content="Missing humans:" />
                        <TextBox
                            x:Name="txtHumansMissingList"
                            Grid.Row="1"
                            Margin="4,0,4,4"
                            Padding="4"
                            FontFamily="Courier New"
                            IsReadOnly="True"
                            TextWrapping="Wrap"
                            VerticalScrollBarVisibility="Auto" />
                    </Grid>
                </Grid>
            </TabItem>



            <TabItem
                x:Name="tabGndTex"
                Padding="8,4"
                Header="Ground Textures">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0" Margin="4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Label
                            Grid.Row="0"
                            Margin="4,0"
                            VerticalAlignment="Bottom"
                            Content="All ground textures:" />
                        <TextBox
                            x:Name="txtGndTexList"
                            Grid.Row="1"
                            Margin="4,0,4,4"
                            Padding="4"
                            FontFamily="Courier New"
                            IsReadOnly="True"
                            TextWrapping="Wrap"
                            VerticalScrollBarVisibility="Auto" />
                    </Grid>
                    <Grid Grid.Column="1" Margin="4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Label
                            Grid.Row="0"
                            Margin="4,0"
                            VerticalAlignment="Bottom"
                            Content="Missing ground textures:" />
                        <TextBox
                            x:Name="txtGndTexMissingList"
                            Grid.Row="1"
                            Margin="4,0,4,4"
                            Padding="4"
                            FontFamily="Courier New"
                            IsReadOnly="True"
                            TextWrapping="Wrap"
                            VerticalScrollBarVisibility="Auto" />
                    </Grid>
                </Grid>
            </TabItem>




            <TabItem Padding="8,4" Header="Logfile">
                <Grid
                    Margin="4"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="34px" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <DockPanel
                        Grid.Row="0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Top">
                        <Button
                            Margin="4"
                            Padding="8,4"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Click="btnLogFile_Click"
                            Content="Open log file..." />
                        <TextBox
                            x:Name="txtLogFileDir"
                            Margin="4"
                            Padding="4"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Top"
                            IsReadOnly="True"
                            TextWrapping="NoWrap" />
                    </DockPanel>
                    <TabControl
                        Grid.Row="1"
                        Margin="4"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                        <TabItem Padding="8,4" Header="Information">
                            <TextBox
                                x:Name="txtLogFileInfo"
                                Padding="4"
                                FontFamily="Courier New"
                                IsReadOnly="True"
                                TextWrapping="Wrap"
                                VerticalScrollBarVisibility="Auto" />
                        </TabItem>
                        <TabItem
                            x:Name="tabLogFileWarn"
                            Padding="8,4"
                            Header="Warnings">
                            <TextBox
                                x:Name="txtLogFileWarn"
                                Padding="4"
                                FontFamily="Courier New"
                                IsReadOnly="True"
                                TextWrapping="Wrap"
                                VerticalScrollBarVisibility="Auto" />
                        </TabItem>
                        <TabItem
                            x:Name="tabLogFileError"
                            Padding="8,4"
                            Header="Errors">
                            <TextBox
                                x:Name="txtLogFileError"
                                Padding="4"
                                FontFamily="Courier New"
                                IsReadOnly="True"
                                TextWrapping="Wrap"
                                VerticalScrollBarVisibility="Auto" />
                        </TabItem>
                    </TabControl>

                </Grid>
            </TabItem>
            <TabItem Padding="8,4" Header="About">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Label
                        HorizontalAlignment="Center"
                        Content="Blue Sky Tool"
                        FontSize="16" />
                    <Label
                        HorizontalAlignment="Center"
                        Content="Release v1"
                        FontSize="10" />
                    <Label HorizontalAlignment="Center" Content="© 2020 cdlbt.co All rights reserved." />
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
